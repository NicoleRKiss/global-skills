        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
        crossorigin="anonymous"></script>


    <h4 class="disclaimer">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Totam quibusdam assumenda labore ipsam
        magni pariatur, nihil commodi quasi doloribus vel! Illum quaerat dolore magnam suscipit at aliquid, laudantium eius
        eaque.</h4>

    <div class="container-fluid">
    
        <%- include('partials/header') %>

    <div>
        <h1 class="text-center">LISTADO DE PRODUCTOS</h1>

           <ul class="listado text-center">
                    <% for (let i=0; i < productos.length;i++){ %>
                <li>
                    <a class="contListado" href="/listaProductos/<%=productos[i].id%>">
                    <% if (productos[i].categorias) {%>
                    <%= productos[i].nombre%> 
                    <% } %>
                    </a>
                </li>
                <%} %>
            </ul>

        </div>

    
<%- include('partials/footer') %>
    
</body>
</html>